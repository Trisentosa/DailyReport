<% layout('./layouts/boilerplate') %>
    <div class="card text-center mb-3 bg-secondary">
        <%- include('./partials/navbar') %>
        <div class="card-body bg-dark">
            <div id="weather" class="carousel slide" data-ride="carousel">
                <div class="card-deck d-flex flex-column mb-3">
                    <div class="card-title">
                        <h3 class="text-white text-capitalize text-center mb-2">
                            <%= weatherReport.city %>
                        </h3>
                    </div>
                    <div class="card bg-secondary border mb-2">
                        <div class="card-body mx-3" style="max-height:300px;">
                            <div class="card-title">
                                <h4 class="card-text text-center text-white">
                                    Current Weather:
                                </h4>
                            </div>
                            <div class="row">
                                <div class="card-body col-md-3 mx-auto">
                                    <h4 class="card-text text-white text-capitalize text-center">
                                        time:
                                    </h4>
                                    <h4 class="card-text text-warning text-capitalize text-center">
                                        <%= currentWeather.time %>
                                    </h4>

                                </div>
                                <img src="http://openweathermap.org/img/wn/<%= currentWeather.icon %>@4x.png"
                                    class="col-md-6 card-img mx-auto" alt="weather icon"
                                    style="background-color: rgb(205, 237, 252); max-width: 250px;">
                                <div class="card-body col-md-3 mx-auto">
                                    <h5 class="card-text text-warning text-capitalize">
                                        <%= currentWeather.main %>
                                    </h5>
                                    <h5 class="card-text text-white text-capitalize">
                                        <%= currentWeather.desc %>
                                    </h5>
                                    <h5 class="card-text text-warning text-capitalize">
                                        Temp: <%= currentWeather.temp %> &#176;K
                                    </h5>
                                    <h5 class="card-text text-white text-capitalize">
                                        Feels : <%= currentWeather.feels %> &#176;K
                                    </h5>
                                    <h5 class="card-text text-warning text-capitalize">
                                        Humidity: <%= currentWeather.humidity %>%
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="carousel-inner">
                        <div class="card-title">
                            <h3 class="text-white text-center my-2">
                                <%= weatherReport.m_dayReport[0].fullDate.slice(0,11) %> to <%=
                                        weatherReport.m_dayReport[weatherReport.m_dayReport.length-1].fullDate.slice(0,11)
                                        %>
                            </h3>
                        </div>
                        <% weatherReport.m_dayReport.forEach((data,i)=>{ %>
                            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                <div class="card-group">
                                    <% for(let dt of data['m_data']){ %>
                                        <div class="card bg-secondary border mb-3" style="width: 18rem; height: 30rem;">
                                            <div class="card-body mx-auto">
                                                <div class="card-title ">
                                                    <h4 class="card-text align-self-middle text-white">
                                                        <%= data.fullDate.slice(0,11) %>
                                                    </h4>
                                                </div>
                                                <p class="card-text align-self-middle text-white text-capitalize">
                                                    Time: <%= dt.time %>:00 GMT
                                                </p>
                                                <img src="http://openweathermap.org/img/wn/<%= dt.icon %>@4x.png"
                                                    class="card-img-top mx-auto" alt="weather icon"
                                                    style="background-color: rgb(205, 237, 252);">
                                                <div class="card-body">
                                                    <p class="card-text align-self-middle text-white text-capitalize">
                                                        <%= dt.main %>
                                                    </p>
                                                    <p class="card-text align-self-middle text-warning text-capitalize">
                                                        <%= dt.desc %>
                                                    </p>
                                                    <p class="card-text align-self-middle text-white text-capitalize">
                                                        Temp: <%= dt.temp %> &#176;K
                                                    </p>
                                                    <p class="card-text align-self-middle text-warning text-capitalize">
                                                        Feels : <%= dt.feels %> &#176;K
                                                    </p>
                                                    <p class="card-text align-self-middle text-white text-capitalize">
                                                        Humidity: <%= dt.humidity %>%
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                            <% }) %>
                                <a class="carousel-control-prev" href="#weather" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#weather" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                    </div>
                </div>
            </div>